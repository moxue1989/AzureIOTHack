@model ChooseDevice

@{
    ViewData["Title"] = "ChooseDevice";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="form-group">
                <label asp-for="DeviceName"></label>
                <select asp-for="DeviceName" class="form-control"
                        asp-items="@Model?.DeviceList">
                    <option value="">-- Select Device --</option>
                </select>
                <span asp-validation-for="DeviceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Select" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>